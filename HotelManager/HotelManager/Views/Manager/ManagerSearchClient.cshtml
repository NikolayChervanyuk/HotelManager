@model IEnumerable<Data.Entities.Client>
@{
    Layout = null;
    ViewBag.Title = "Manager Search Clients";
}
<!DOCTYPE html>
@Styles.Render("~/Content/css")
@Html.Partial("~/Views/Manager/NavBarManager.cshtml")
    }
<style>
    .dropbtn {
        background-color: #111;
        color: white;
        padding: 10px;
        font-size: 16px;
        border: 2px;
        border-color: #191919;
        color: #818181;
        display: block;
        background: #efefef
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 63px;
        box-shadow: 3px 3px 3px 3px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: grey;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: dimgrey;
    }

    .usersList th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #2f2f2f;
        color: white;
    }

    .usersList {
        border-collapse: collapse;
        width: 80%;
    }

        .usersList td, .usersList th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .usersList tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .usersList tr:hover {
            background-color: #ddd;
        }

    .a {
        padding-left: 10px;
        padding-right: 10px;
    }
</style>
    } );
<html>
<head>
</head>
<body>
    <h1 style="text-align: center;
        margin-left: 5%;">
        List of Reservations
    </h1><br />
    <table id="usersTable" class="usersList" style="height: 98px; margin-left: 220px; margin-right: auto;" width="1158">
        <thead>
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Surename</th>
                <th>E-mail</th>
                <th>Phone number</th>
                <th>Is adult</th>
            </tr>
        </thead>
        <tbody>
            @using (Html.BeginForm())
            {
                int i = 0;
                foreach (var client in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@client.FirstName</td>
                        <td>@client.SureName</td>
                        <td>@client.Email</td>
                        <td>@client.Number</td>
                        <td>@client.Adult</td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
        </tfoot>
    </table>
</body>
</html>

